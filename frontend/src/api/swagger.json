{
  "openapi": "3.0.0",
  "paths": {
    "/polls": {
      "post": {
        "operationId": "PollController_create",
        "parameters": [],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/CreatePollDto" }
            }
          }
        },
        "responses": {
          "201": {
            "description": "The poll has been created",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/Poll" }
              }
            }
          }
        },
        "tags": ["polls"]
      },
      "get": {
        "operationId": "PollController_findAll",
        "parameters": [],
        "responses": {
          "200": {
            "description": "Returns all polls of the system",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": { "$ref": "#/components/schemas/Poll" }
                }
              }
            }
          }
        },
        "tags": ["polls"]
      }
    },
    "/polls/{pollId}": {
      "get": {
        "operationId": "PollController_findOne",
        "parameters": [
          {
            "name": "pollId",
            "required": true,
            "in": "path",
            "schema": { "type": "number" }
          }
        ],
        "responses": {
          "200": {
            "description": "Returns the poll with this id",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/Poll" }
              }
            }
          },
          "404": { "description": "No poll with this id has been found" }
        },
        "tags": ["polls"]
      },
      "patch": {
        "operationId": "PollController_update",
        "parameters": [
          {
            "name": "pollId",
            "required": true,
            "in": "path",
            "schema": { "type": "number" }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/UpdatePollDto" }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Updates the poll with this id and returns it",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/Poll" }
              }
            }
          },
          "404": { "description": "No poll with this id has been found" }
        },
        "tags": ["polls"]
      },
      "delete": {
        "operationId": "PollController_remove",
        "parameters": [
          {
            "name": "pollId",
            "required": true,
            "in": "path",
            "schema": { "type": "number" }
          }
        ],
        "responses": {
          "200": { "description": "The poll has been deleted" },
          "404": { "description": "The poll has not been found" }
        },
        "tags": ["polls"]
      }
    },
    "/polls/byCode/{code}": {
      "get": {
        "operationId": "PollController_findByCode",
        "parameters": [
          {
            "name": "code",
            "required": true,
            "in": "path",
            "schema": { "type": "string" }
          }
        ],
        "responses": {
          "200": {
            "description": "Returns the poll with this code",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/Poll" }
              }
            }
          },
          "404": { "description": "No poll with this code has been found" }
        },
        "tags": ["polls"]
      }
    }
  },
  "info": {
    "title": "Solid Polls",
    "description": "",
    "version": "1.0.0",
    "contact": {}
  },
  "tags": [],
  "servers": [
    { "url": "http://localhost:3000", "description": "Testing" },
    { "url": "https://solidpolls.de/api", "description": "Production" }
  ],
  "components": {
    "schemas": {
      "CreatePollDto": {
        "type": "object",
        "properties": { "title": { "type": "string" } },
        "required": ["title"]
      },
      "Poll": {
        "type": "object",
        "properties": {
          "id": { "type": "number" },
          "title": { "type": "string" },
          "code": { "type": "string" }
        },
        "required": ["id", "title", "code"]
      },
      "UpdatePollDto": {
        "type": "object",
        "properties": { "title": { "type": "string" } }
      }
    }
  }
}
